<% hide_sidebar = !user_signed_in? || (user_signed_in? && !has_facet_values?) %>

<div id="sidebar" class="<%= hide_sidebar ? 'hidden' : 'col-sm-3' %>">
  <%= render 'search_sidebar' %>
</div>

<div id="content" class="<%= hide_sidebar ? 'col-sm-12' : 'col-sm-9' %>">
  <% unless has_search_parameters? %>
    <%# if there are no input/search related params, display the "home" partial -%>
    <%= render file: 'nu_catalog/_home_text.html.erb' %>
    <%= render 'shared/sitelinks_search_box' %>
  <% else %>
    <%= render 'search_results' %>
  <% end %>

</div>
